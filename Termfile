# Install:
#   See https://github.com/briangonzalez/termrc
#
# Use:
#   $ termrc start

root:
  ~

commands:
  discovery1:             java -Xms512m -Dspring.profiles.active=discovery1 -jar discovery/build/libs/*.jar
  discovery2: sleep 14 && java -Xms512m -Dspring.profiles.active=discovery2 -jar discovery/build/libs/*.jar
  quotes1:                java -Xms512m -Dspring.profiles.active=eureka     -jar quotes/build/libs/*.jar --server.port=8080
  quotes2:    sleep 10 && java -Xms512m -Dspring.profiles.active=eureka     -jar quotes/build/libs/*.jar --server.port=8081
  portal:     sleep 10 && java -Xms512m -Dspring.profiles.active=eureka     -jar portal/build/libs/*.jar --server.port=9090
layout_type: row

layout:
  - [ discovery1, discovery2, quotes1, quotes2, portal ]
